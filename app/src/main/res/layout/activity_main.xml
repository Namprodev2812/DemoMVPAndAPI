<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#673AB7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <ImageView
        android:paddingBottom="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/cdms"
        android:id="@+id/imageview_cd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/imageview_cd"
        android:id="@+id/textview_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />
    <SeekBar
        android:layout_below="@id/textview_duration"
        android:layout_centerInParent="true"
        android:id="@+id/seekbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/seekbar_main"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_random"
            android:src="@drawable/ic_all_inclusive_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/imageview_play_back"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/imageview_play_pause"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/imageview_play_next"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/imageview_shup"
            android:src="@drawable/ic_repeat_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/imageview_download"
            android:src="@drawable/ic_file_download_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>
